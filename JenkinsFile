@Library('mypipeline_notification') _

pipeline {
    agent any
    stages {
        stage('build') {
            steps {
               bat "${get_resource_dir()}/Scripts/"
            }
        }
        stage ('test') {
            steps {
                echo 'testing'
            }
        }
        stage('deploy'){
            steps {
                bat "${get_resource_dir()}/"
            }
        }
    }
    post {
        always {
            sendNotification currentBuild.result
        }
    }
}
