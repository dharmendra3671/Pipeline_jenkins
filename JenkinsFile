@Library('mypipeline_notification') _

pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                script{
                    get_resource_dir.runMyPython()
                }
            }
        }
        stage ('test') {
            steps {
                echo 'testing'
            }
        }
        stage('deploy'){
            steps {
                script{
                    get_resource_dir.runpythonScripts()
                }
            }
        }
    }
    post {
        always {
            sendNotification currentBuild.result
        }
    }
}
