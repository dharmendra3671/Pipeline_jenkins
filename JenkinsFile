@Library('mypipeline_notification') _

pipeline {
    agent any
    stages {
        stage('build') {
            steps {
               bat "${get_resource_dir()}/Scripts/test.py"
            }
        }
        stage ('test') {
            steps {
                echo 'testing'
            }
        }
        stage('deploy'){
            steps {
                //echo 'deploying'
                bat "${get_resource_dir()}/Scripts/test1.py"
            }
        }
    }
}
