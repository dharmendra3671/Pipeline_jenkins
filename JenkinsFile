@Library('mypipeline_notification') _

pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                loadScript.call()
            }
        }
        stage ('test') {
            steps {
                echo 'testing'
            }
        }
        stage('deploy'){
            steps {
                loadScript.call()
            }
        }
    }
    post {
        always {
        sendNotification currentBuild.result
        }
    }
}
